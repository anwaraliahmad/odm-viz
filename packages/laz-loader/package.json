{
  "name": "@odm-viz/laz-loader",
  "version": "0.2.1",
  "description": "A React component for loading and rendering LAZ point cloud data with Three.js",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/LAZModel.tsx --format esm,cjs --dts --out-dir dist --external react,three,@react-three/fiber,@react-three/drei",
    "dev": "tsup src/index.ts src/LAZModel.tsx --format esm,cjs --dts --out-dir dist --watch --sourcemap",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    }
  },
  "peerDependencies": {
    "@react-three/drei": "^9.0.0",
    "@react-three/fiber": ">=8.0.0",
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "three": ">=0.150.0"
  },
  "dependencies": {
    "@odm-viz/wasm": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/three": "^0.160.0",
    "eslint": "^8.57.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "laz",
    "point-cloud",
    "three.js",
    "react-three-fiber",
    "3d",
    "visualization"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/anwaraliahmad/odm-viz.git",
    "directory": "packages/laz-loader"
  },
  "bugs": {
    "url": "https://github.com/anwaraliahmad/odm-viz/issues"
  },
  "homepage": "https://github.com/anwaraliahmad/odm-viz/tree/main/packages/laz-loader#readme"
}
