{
  "name": "@odm-viz/wasm",
  "version": "0.2.1",
  "types": "dist/index.d.ts",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "type": "module",
  "files": [
    "dist",
    "dist/*.wasm"
  ],
  "scripts": {
    "prebuild": "rimraf dist && mkdir -p dist",
    "build:ts": "tsup src/index.ts src/wasmLoader.ts --format esm,cjs --dts --out-dir dist",
    "build": "pnpm prebuild && docker buildx build -f ../../Dockerfile --target export --output type=local,dest=./dist/ ../../ && pnpm build:ts",
    "dev": "tsup src/index.ts src/wasmLoader.ts --format esm,cjs --dts --out-dir dist --watch",
    "clean": "rimraf dist"
  },
  "dependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^5.0.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  }
}
